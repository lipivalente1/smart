<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/produto1"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:background="#1E201D"
        android:padding="1dp"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:id="@+id/fundoProduto"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center_vertical"
        android:background="#FAF7F6">

        <ImageView
            android:id="@+id/fotoProduto"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            app:srcCompat="@drawable/legumes"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--nome produto-->

            <TextView
                android:id="@+id/nomeProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="none"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="Produto"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rec"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/verde" /> <!--retangulo-->
            <LinearLayout
                android:id="@+id/contNutri1"
                android:layout_width="70dp"
                android:background="#87CF03"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/textNutri"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="100"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contPreco"
                android:layout_width="95dp"
                android:background="#87CF03"
                android:visibility="gone"
               android:layout_marginTop="10dp"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/textPre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="R$32.34"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>  <!--PreÃ§o-->
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="#5AEF60"
            android:text="ADD" /> <!--button Add-->

        <LinearLayout
            android:id="@+id/contNutri2"
            android:layout_width="70dp"
            android:visibility="gone"
            android:background="#87CF03"
            android:layout_marginRight="15dp"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/textNutri2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="100"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
         <!--Valor nutricional-->
    </LinearLayout>


    </LinearLayout>
